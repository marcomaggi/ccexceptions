extern cce_condition_t const * my_condition_new_logic_error_subtype (cce_destination_t L, int the_data)
  __attribute__((__nonnull__(1)));

__attribute__((__pure__,__nonnull__(1),__always_inline__))
static inline bool
my_condition_is_logic_error_subtype (cce_condition_t const * C)
@{
  return cce_is_condition(C, &(my_descriptor_logic_error_subtype_ptr->descriptor));
@}

extern void logic_error_subtyping_init_module (void);

#endif /* LOGIC_ERROR_SUBTYPING_HEADER_H */
@end smallexample

@noindent
in the body file @file{logic-error-subtype-body.c} we put:

@smallexample
#include <ccexceptions.h>
#include "logic-error-subtyping-header.h"
#include <stdio.h>
#include <stdlib.h>

static void
my_condition_final_logic_error_subtype (cce_condition_t * _C)
/* Here we  finalise only  the fields  of this type
   leaving untouched the fields of the parent type. */
@{
  my_condition_logic_error_subtype_t * C = (my_condition_logic_error_subtype_t *) _C;
  *(C->data) = 0;
@}

static void
my_condition_delete_logic_error_subtype (cce_condition_t * _C)
@{
  my_condition_logic_error_subtype_t * C = (my_condition_logic_error_subtype_t *) _C;

  free(C->data);
  free(C);
@}

static char const *
my_condition_static_message_logic_error_subtype (cce_condition_t const * C CCE_UNUSED)
@{
  return "Error subtype exceptional condition";
@}

static my_descriptor_logic_error_subtype_t my_descriptor_logic_error_subtype_stru = @{
  /* This field is set below by the module initialisation function. */
  .descriptor.parent            = NULL,
  .descriptor.delete            = my_condition_delete_logic_error_subtype,
  .descriptor.final             = my_condition_final_logic_error_subtype,
  .descriptor.static_message    = my_condition_static_message_logic_error_subtype
@};

my_descriptor_logic_error_subtype_t const * const my_descriptor_logic_error_subtype_ptr = &my_descriptor_logic_error_subtype_stru;

void
my_condition_init_logic_error_subtype (my_condition_logic_error_subtype_t * C, int the_data)
/* Here we call the parent's initialisation function; then we initialise
   the fields of this type. */
@{
  cce_condition_init_logic_error(&(C->parent));
  *(C->data) = the_data;
@}

cce_condition_t const *
my_condition_new_logic_error_subtype (cce_destination_t L, int the_data)
/* Here  we  allocate  the  asynchronous resources  and  initialise  the
   descriptor field; then we call the initialisation function. */
@{
  my_condition_logic_error_subtype_t * C = cce_sys_malloc(L, sizeof(my_condition_logic_error_subtype_t));
  C->data = cce_sys_malloc(L, sizeof(int));
  cce_condition_init((cce_condition_t *) C, &(my_descriptor_logic_error_subtype_ptr->descriptor));
  my_condition_init_logic_error_subtype(C, the_data);
  return (cce_condition_t const *) C;
@}

void
logic_error_subtyping_init_module (void)
@{
  my_descriptor_logic_error_subtype_stru.descriptor.parent = &(cce_descriptor_logic_error_ptr->descriptor);
@}
@end smallexample

